{
    "manifest_version": 3,
    "name": "ChatGPT UI Customizer",
    "version": "1.0.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "author": "Kamada Masachika",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "host_permissions": [
        "https://chat.openai.com/*"
    ]
}